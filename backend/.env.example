# Configuration pour développement
NODE_ENV=development
PORT=4000

# MongoDB - CHANGEZ CES VALEURS
MONGODB_URI=mongodb+srv://VOTRE_USER:VOTRE_PASSWORD@cluster.mongodb.net/VOTRE_DB

# JWT Secret - GÉNÉREZ UNE CLÉ FORTE (minimum 64 caractères)
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGEZ_CETTE_CLE_SECRETE_AVEC_UNE_VRAIE_CLE_ALEATOIRE_DE_64_CARACTERES_MINIMUM

# Cloudinary - CHANGEZ CES VALEURS
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# OpenAI pour transcription audio
OPENAI_API_KEY=votre_openai_api_key

# Frontend URL - CHANGEZ SELON VOTRE DÉPLOIEMENT
FRONTEND_URL=http://localhost:3002

# Configuration de sécurité
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=CHANGEZ_CETTE_CLE_SECRETE_SESSION
